// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run the `open default settings` command
// from the command palette or from `Zed` application menu.
// // https://github.com/zed-industries/zed/blob/main/assets/settings/default.json
// // https://github.com/zed-industries/zed/issues/8014#issuecomment-2031041450
// https://github.com/zed-industries/zed/blob/main/assets/themes/one/one.json
//
{
    "use_auto_surround": false,
    "multi_cursor_modifier": "cmd_or_ctrl",
    "buffer_font_size": 17,
    "buffer_font_family": "Bitstream Vera Sans Mono",
    "buffer_font_weight": 100.0,
    //
    "tab_size": 4,
    "buffer_line_height": "standard",
    "current_line_highlight": "gutter",
    "show_wrap_guides": true,
    // Character counts at which to show wrap guides in the editor.
    "wrap_guides": [120],
    "use_autoclose": false,
    "git": {
        "git_gutter": "tracked_files",
        "inline_blame": {
            "enabled": false,
        },
    },
    "preview_tabs": {
        "enabled": false,
        "enable_preview_from_file_finder": false,
        "enable_keep_preview_on_code_navigation": false,
    },
    "file_types": {
        // "C++": ["c"],
        //"TOML": ["MyLockFile"],
        //"Dockerfile": ["Dockerfile*"],
        "XML": ["*launch"],
    },
    "languages": {
        "C++": {
            "enable_language_server": true,
            // "format_on_save": "on",
            //"use_autoclose": true,
            "extend_comment_on_newline": true,
            //"remove_trailing_whitespace_on_save": true,
            "tab_size": 2,
            "show_wrap_guides": true,
            "wrap_guides": [120],
            "code_actions_on_format": {
                "clangd": true,
            },
            "always_treat_brackets_as_autoclosed": true,
            "ensure_final_newline_on_save": true,
        },
        "Python": {
            "tab_size": 4,
            "remove_trailing_whitespace_on_save": false,
        },
        "Rust": {
            "use_autoclose": false,
            "use_on_type_format": false,
        },
    },
    "theme": {
        "mode": "system",
        "light": "One Light",
        "dark": "One Dark",
    },
    "experimental.theme_overrides": {
        "editor.wrap_guide": "#CCC",
        "editor.active_wrap_guide": "#CCC",
        "editor.line_number": "#AAAAAA",
        "editor.background": "#ffffff",
        "syntax": {
            "comment": {
                "color": "#007f00",
                //"font_weight": 900
            },
            "string": {
                "color": "#7f007f",
                //"font_weight": 900
            },
            "variable": {
                "color": "#000000",
                //"font_weight": 900
            },
            "type": {
                "color": "#000000",
                //"font_weight": 900
            },
            "function": {
                "color": "#000000",
                //"font_weight": 900
            },
            "keyword": {
                "color": "#00007f",
                "font_weight": 600,
            },
            "property": {
                "color": "#00007f",
                //"font_style": null,
                //"font_weight": null
            },
            "constant": {
                "color": "#bf956aff",
                "font_weight": 600,
            },
            "punctuation.bracket": {
                //"color": "#b2b9c6ff",
                //"font_style": null,
                "font_weight": 600,
            },
        },
    },
    "telemetry": {
        "diagnostics": false,
        "metrics": false,
    },
    "notification_panel": {
        // Whether to show the notification panel button in the status bar.
        "button": false,
    },
    "agent": {
        // Version of this setting.
        // Whether the agent is enabled.
        "inline_assistant_model": {
            "provider": "ollama",
            "model": "gemma3:12b",
        },
        "profiles": {
            "sdfsdf": {
                "name": "sdfsdf",
                "tools": {},
                "enable_all_context_servers": false,
                "context_servers": {},
            },
        },
        "enable_feedback": false,
        "default_profile": "ask",
        "default_model": {
            "provider": "ollama",
            "model": "qwen3:8b",
        },
        "enabled": true,
    },
    "collaboration_panel": {
        // Whether to show the collaboration panel button in the status bar.
        "button": false,
    },
    "autosave": "on_focus_change",
    "inlay_hints": {
        "enabled": true,
        "show_type_hints": false,
        "show_parameter_hints": true,
        "show_other_hints": true,
        "edit_debounce_ms": 700,
        "scroll_debounce_ms": 50,
    },
    "diagnostics": {
        "inline": {
            "enabled": false,
            "update_debounce_ms": 5000,
            "padding": 4,
            "min_column": 0,
            "max_severity": null,
        },
    },
    "lsp": {
        "rust-analyzer": {
            "initialization_options": {
                "completion": { "autoimport": { "enable": false } },
            },
        },
    },
    "project_panel": {
        // Whether to show the project panel button in the status bar
        "button": true,
        // Default width of the project panel.
        "default_width": 240,
        // Where to dock the project panel. Can be 'left' or 'right'.
        "dock": "left",
        // Whether to show file icons in the project panel.
        "file_icons": true,
        // Whether to show folder icons or chevrons for directories in the project panel.
        "folder_icons": true,
        // Whether to show the git status in the project panel.
        "git_status": true,
        // Amount of indentation for nested items.
        "indent_size": 10,
        // Whether to reveal it in the project panel automatically,
        // when a corresponding project entry becomes active.
        // Gitignored entries are never auto revealed.
        "auto_reveal_entries": true,
        /// Whether to fold directories automatically
        /// when a directory has only one directory inside.
        "auto_fold_dirs": true,
        /// Scrollbar-related settings
        "scrollbar": {
            /// When to show the scrollbar in the project panel.
            /// This setting can take four values:
            ///
            /// 1. null (default): Inherit editor settings
            /// 2. Show the scrollbar if there's important information or
            ///    follow the system's configured behavior (default):
            ///   "auto"
            /// 3. Match the system's configured behavior:
            ///    "system"
            /// 4. Always show the scrollbar:
            ///    "always"
            /// 5. Never show the scrollbar:
            ///    "never"
            "show": "auto",
        },
        "show_diagnostics": "all",
    },
    "edit_predictions": {
        // Which edit prediction provider to use.
        "provider": "ollama",
        // A list of globs representing files that edit predictions should be disabled for.
        // There's a sensible default list of globs already included.
        // Any addition to this list will be merged with the default list.
        // Globs are matched relative to the worktree root,
        // except when starting with a slash (/) or equivalent in Windows.
        "disabled_globs": [
            "**/.env*",
            "**/*.pem",
            "**/*.key",
            "**/*.cert",
            "**/*.crt",
            "**/.dev.vars",
            "**/secrets.yml",
            "**/.zed/settings.json", // zed project settings
            "/**/zed/settings.json", // zed user settings
            "/**/zed/keymap.json",
        ],
        // When to show edit predictions previews in buffer.
        // This setting takes two possible values:
        // 1. Display predictions inline when there are no language server completions available.
        //     "mode": "eager"
        // 2. Display predictions inline only when holding a modifier key (alt by default).
        //     "mode": "subtle"
        "mode": "eager",
        // Copilot-specific settings
        // "copilot": {
        //   "enterprise_uri": "",
        //   "proxy": "",
        //   "proxy_no_verify": false
        //   "enable_next_edit_suggestions": true
        // },
        "ollama": {
            "api_url": "http://localhost:11434",
            "model": "qwen2.5-coder:7b",
            "max_output_tokens": 256,
        },
    },
}
